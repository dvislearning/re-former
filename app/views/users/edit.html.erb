  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this edit:</h2>

    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>