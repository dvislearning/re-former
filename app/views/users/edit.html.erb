<%= form_for @user do |f| %>
	<%= f.label :username, "Your Username: " %>
	<%= f.text_field :username %><br/ >
	<%= f.label :email, "E-mail: " %>
	<%= f.text_field :email, placeholder: "example@example.net" %><br/ >
	<%= f.label :password, "Password: " %>
	<%= f.password_field :password %><br/ >
	<%= f.submit "Submit" %>
<% end %>


